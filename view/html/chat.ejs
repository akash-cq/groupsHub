<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chats</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        background-color: black;
        color: white;
      }
      .container {
        border: 1px solid whitesmoke;
        border-radius: 10px;
        width: 80%;
        height: 90vh;
        margin: 10%;
        display: flex;
        flex-direction: row;
        gap: 10px;
      }
      .left {
        border: 1px solid yellow;
        height: 100%;
        width: 30%;
      }
      .right {
        height: 100%;
        border: 1px solid green;
        width: 70%;
        display: flex;
        flex-direction: column;
      }
      .msg {
        border: 1px solid rgba(120, 44, 191, 0.819);
        padding: 10px;
        width: 40%;
        display: flex;
        flex-direction: column;
        margin: 2%;
        border-radius: 20px;
      }
      ::-webkit-scrollbar {
        display: none;
      }
      .name {
        font-size: 12px;
        color: green;
      }
      .time {
        font-size: 12px;
        text-align: right;
      }
      .me {
        align-self: flex-end;
      }
      .message {
        display: flex;
        flex-direction: column;
        border: 1px solid brown;
        width: 100%;
        height: 90%;
        overflow: auto;
      }
      .text {
        width: 100%;
        display: flex;
        flex-direction: row;
      }
      button {
        background-color: white;
        color: black;
        height: 20%;
        width: 12%;
        padding: 5px;
        margin: 2%;
        margin-top: 10%;
        border: 1px solid blueviolet;
        border-radius: 10px;
      }
      textarea {
        margin: 1%;
        margin-left: 5%;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <h1>welecome to chat page</h1>
    <div class="container">
      <div class="left"></div>
      <div class="right">
        <div class="message">
        </div>
        <div class="text">
          <textarea cols="70" placeholder="Message..."></textarea>
          <button class="submit">send</button>
        </div>
      </div>
    </div>
    <script>
      let txt = document.querySelector("textarea");
      let btnSend = document.querySelector(".submit")
      let messageArea=document.querySelector(".message")
      btnSend.addEventListener("click",async ()=>{
        let msg = txt.value.trim();
        if(msg=="")return false;
        let d = new Date();
        const Fullurl = window.location.href;
        const url = new URL(Fullurl);
        const path = url.pathname.split("/");
        const groupid =  path[path.length-2]

        let obj={
          content:msg,
          userid:path[path.length-1],
          groupid :groupid
        }
        console.log(obj);
        fetch("/user/chats/messagesend",{
          method:'post',
          headers:{
            'content-type':'application/json'
          },
          body:JSON.stringify(obj)
        })
        .then(Response=>Response.json())
        .then(data=>{
          createmsg(obj,data.data)
        })
        .catch(err=>console.log(err))
      })
      function createmsg(obj,data){
        console.log(data);
        let div = document.createElement("div");
        div.classList.add("me","msg")
        div.innerHTML=`
            <span class="name me">${data.name}</span>
            <span
              >${obj.content}</span
            >
            <span class="time">${Date.now}</span>
            
        `
        messageArea.append(div);
      }
    </script>
  </body>
</html>
